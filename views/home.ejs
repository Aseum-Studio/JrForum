<body class="mdui-theme-layout-dark">
    <!-- 我们的旅程从这里开始 -->
    <script src="/javascripts/home.js"></script>

    <!-- 导航 -->
    <nav id="top" class="navbar navbar-expand-sm bg-dark navbar-dark">
        <a class="navbar-brand" href="#">JrForum</a>
        <!-- Links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="#">主页</a>
            </li>
